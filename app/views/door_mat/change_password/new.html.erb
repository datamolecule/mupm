<ol class="breadcrumb">
  <li><%= link_to('Back to Passwords', main_app.passwords_path, :style => 'color:#000000;') %></li>
  <li class="active">Change Account Password</li>
</ol>

<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <div class="panel panel-default text-center">
      <div class="panel-body">

        <%= form_for(@change_password, url: change_password_path) do |f| %>
            <%= render 'door_mat/helpers/errors_if_any', {object: @change_password} %>

            <div class="field">
              <%= f.label :old_password %><br>
              <%= f.password_field :old_password %>
            </div>
            <div class="field">
              <%= f.label :new_password %><br>
              <%= f.password_field :new_password %>
            </div>
            <div class="field">
              <%= f.label :new_password_confirmation %><br>
              <%= f.password_field :new_password_confirmation %>
            </div>

            <div class="actions" style="margin-top: 15px">
              <%= f.submit t("door_mat.change_password.submit_button"), {class: "btn btn-default btn-sm text-center", role: "button"} %>
            </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

