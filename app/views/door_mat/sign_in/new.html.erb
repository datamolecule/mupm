<div class="row">
  <div class="col-md-offset-4 col-md-4">
  <div class="panel panel-default text-center">
    <div class="panel-body">
      <h1>Sign In</h1>

      <%= form_for(@sign_in, url: sign_in_path) do |f| %>
          <%= render 'door_mat/helpers/errors_if_any', {object: @sign_in} %>

          <div class="field">
            <%= f.label :email %><br>
            <%= f.text_field :email %>
          </div>
          <div class="field">
            <%= f.label :password %><br>
            <%= f.password_field :password %>
          </div>
          <div class="field">
            <%= f.label :is_this_a_public_computer? %>
            <%= f.check_box :is_public %>
          </div>
          <div class="field">
            <%= f.label :remember_me? %>
            <%= f.check_box :remember_me %>
          </div>
          <p><%= link_to t("door_mat.forgot_password.link"), forgot_password_path %></p>

          <div class="actions", style="margin-top: 15px">
            <%= f.submit t("door_mat.sign_in.submit_button"), {class: "btn btn-default btn-lg", role: "button"} %>
          </div>
      <% end %>


      <p>Don't have an account yet? <%= link_to 'Sign Up', sign_up_path %></p>
    </div>
  </div>
  </div>
</div>
